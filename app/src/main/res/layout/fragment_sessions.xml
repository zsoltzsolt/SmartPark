<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_gradient_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20sp"
        android:background="@drawable/home_gradient_background">

        <ImageButton
            android:layout_width="27sp"
            android:layout_height="27sp"
            android:src="@drawable/back_arrow"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="25sp"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/lato_light"
            android:gravity="center_horizontal"
            android:text="Availability predictions"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:layout_marginTop="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_start_datetime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="📅 Start"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_end_datetime"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            android:layout_marginTop="40sp"
            android:minWidth="80dp"
            android:paddingHorizontal="8dp"
            android:layout_marginHorizontal="10sp"
            android:textSize="14sp"
            android:backgroundTint="@color/teal_700"/>

        <Button
            android:id="@+id/btn_end_datetime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="📅 End"
            app:layout_constraintStart_toEndOf="@id/btn_start_datetime"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            android:layout_marginTop="40sp"
            android:minWidth="80dp"
            android:paddingHorizontal="8dp"
            android:layout_marginHorizontal="10sp"
            android:textSize="14sp"
            android:backgroundTint="@color/teal_700"/>

        <Button
            android:id="@+id/btn_predict"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🔍 Predict"
            app:layout_constraintTop_toBottomOf="@id/btn_end_datetime"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="15sp"
            android:minWidth="100dp"
            android:paddingHorizontal="10dp"
            android:textSize="16sp"
            android:backgroundTint="@color/gunmetal"/>

        <TextView
            android:id="@+id/tv_selected_datetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selected Date/Time: "
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="@font/lato_light"
            app:layout_constraintTop_toBottomOf="@id/btn_predict"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20sp"
            android:layout_marginStart="20sp"/>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="16dp"
            android:layout_marginTop="20sp"
            app:layout_constraintTop_toBottomOf="@id/tv_selected_datetime"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
